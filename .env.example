# HiLSim-3 Configuration Example
# Copy this file to .env and modify as needed

# Simulation Type (numeric, robot, vehicle, or custom)
SIM_TYPE=numeric

# Hardware Type (numeric, robot, vehicle, or custom)
HW_TYPE=numeric

# Simulation Parameters
STEP_MS=10                    # Step duration in milliseconds
REPLY_TIMEOUT_MS=2           # Timeout for step responses
TOTAL_STEPS=1000             # Total number of simulation steps

# ========================================
# Network Delay Configuration
# ========================================

# Legacy Configuration (applies to both directions if individual settings are 0)
NETWORK_DELAY_MS=0                    # Base delay (ms)
NETWORK_DELAY_VARIANCE_MS=0           # Variance std dev (ms)
NETWORK_DELAY_DISTRIBUTION=normal     # Distribution type (normal/uniform/exponential)

# ----------------------------------------
# Simulator → Hardware Delay Settings
# ----------------------------------------
NETWORK_DELAY_SIM_TO_HW_MS=0                 # Base delay (ms)
NETWORK_DELAY_SIM_TO_HW_VARIANCE_MS=0        # Variance std dev (ms)
NETWORK_DELAY_SIM_TO_HW_DISTRIBUTION=normal  # Distribution (normal/uniform/exponential)

# ----------------------------------------
# Hardware → Simulator Delay Settings
# ----------------------------------------
NETWORK_DELAY_HW_TO_SIM_MS=0                 # Base delay (ms)
NETWORK_DELAY_HW_TO_SIM_VARIANCE_MS=0        # Variance std dev (ms)
NETWORK_DELAY_HW_TO_SIM_DISTRIBUTION=normal  # Distribution (normal/uniform/exponential)

# ----------------------------------------
# Usage Examples:
# ----------------------------------------
# Example 1: Symmetric 10ms ± 2ms normal distribution
# NETWORK_DELAY_MS=10
# NETWORK_DELAY_VARIANCE_MS=2
# NETWORK_DELAY_DISTRIBUTION=normal
#
# Example 2: Asymmetric delays
# NETWORK_DELAY_SIM_TO_HW_MS=15
# NETWORK_DELAY_SIM_TO_HW_VARIANCE_MS=3
# NETWORK_DELAY_SIM_TO_HW_DISTRIBUTION=uniform
# NETWORK_DELAY_HW_TO_SIM_MS=5
# NETWORK_DELAY_HW_TO_SIM_VARIANCE_MS=1
# NETWORK_DELAY_HW_TO_SIM_DISTRIBUTION=exponential

ACT_HOST=hardware                    # Hardware container hostname
ACT_PORT=5001                        # Communication port

# Container Configuration
UID=1000                     # User ID for containers
GID=1000                     # Group ID for containers

# Logging (auto-generated if not set)
# LOG_TIMESTAMP=20240101_120000