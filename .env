# HiLSim-3 Configuration - Vehicle Simulation
SIM_TYPE=vehicle
HW_TYPE=vehicle
STEP_MS=10
REPLY_TIMEOUT_MS=2
TOTAL_STEPS=1000

# ========================================
# Network Delay Configuration
# ========================================

# Legacy Configuration (applies to both directions if individual settings are 0)
# This uses tc netem for OS-level network delay simulation
NETWORK_DELAY_MS=0                    # Base delay (ms) - 0 to use directional tc mode
NETWORK_DELAY_VARIANCE_MS=0           # Variance std dev (ms)
NETWORK_DELAY_DISTRIBUTION=normal     # Distribution type (normal/uniform/pareto)

# ----------------------------------------
# Simulator → Hardware Delay Settings (tc-based when > 0)
# ----------------------------------------
NETWORK_DELAY_SIM_TO_HW_MS=10                # Base delay (ms) - uses tc netem egress
NETWORK_DELAY_SIM_TO_HW_VARIANCE_MS=2        # Variance std dev (ms)
NETWORK_DELAY_SIM_TO_HW_DISTRIBUTION=normal  # Distribution (normal/uniform/pareto)

# ----------------------------------------
# Hardware → Simulator Delay Settings (tc egress)
# ----------------------------------------
NETWORK_DELAY_HW_TO_SIM_MS=20                # Base delay (ms) - uses tc netem egress
NETWORK_DELAY_HW_TO_SIM_VARIANCE_MS=3        # Variance std dev (ms)
NETWORK_DELAY_HW_TO_SIM_DISTRIBUTION=normal  # Distribution (normal/uniform/pareto)

ACT_HOST=hardware
ACT_PORT=5001
UID=1000
GID=1000